  <div class= 'container mt-5'>
  <h1>Task Details</h1>
  <p><strong>Title:</strong> <%= @task.title %></p>
  <p><strong>Details:</strong> <%= @task.details %></p>
  <p><strong>Completed:</strong> <%= @task.completed ? 'Yes' : 'No' %></p>

  <%= link_to 'Back to Tasks', tasks_path, class: 'btn btn-info' %>
  <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary' %>
  <%= link_to "Delete",
  task_path(@task), class: 'btn btn-danger',
  data: {turbo_method: :delete, turbo_confirm: "Are you really sure?"}
%>
</div>
